{
  "crons": [
    {
      "path": "/cron",
      "schedule": "*/10 * * * *"
    }
  ],
  "functions": {
    "api/cron.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/cron",
      "destination": "/api/cron"
    },
    {
      "source": "/api/(.*)", 
      "destination": "/api/index"
    }
  ]
}
